<div class="book-card" id="<%= dom_id book %>">
  <p>
    <strong>📖 Title:</strong> 
    <%= book.title %>
  </p>
  <p>
    <strong>💲 Price:</strong> 
    <%= book.price %>
  </p>
  <p>
    <strong>ℹ️ About:</strong>
    <%= book.about %>
  </p>
  <p>
    <strong>📝 Description:</strong> 
    <%= book.description %>
  </p>
  <p>
    <strong>📅 Launch date:</strong> 
    <%= book.launch_date %>
  </p>
  <p>
    <strong>✍️ Writer:</strong> 
    <%= book.writer %>
  </p>
  <p>
    <strong>👁 Viewed By:</strong> 
    <%= pluralize(book.view, "view") %>
  </p>
  <p>
    <strong>👁 Owned By:</strong> 
    <%= book.user.name %>
  </p>
</div>
