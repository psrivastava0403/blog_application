<p class="notice"><%= notice %></p>

<div class='book-card'>
  <%= render @book %>
</div>

<div>
  <%= link_to "✏️ Edit this book", edit_book_path(@book), class: "btn" %> |
  <%= link_to "⬅️ Back to books", books_path, class: "btn" %>
  <%= button_to "🗑️ Destroy this book", @book, method: :delete, class: "btn", data: { confirm: "Are you sure?" } %>
</div>